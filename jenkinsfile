pipeline {
    agent any
 
    stages {
        stage('Setup parameters') {
            steps {
                script { 
                    properties([
                        parameters([
                            booleanParam(
                                defaultValue: false, 
                                description: 'Tik the box if you want to perform the test stage', 
                                name: 'ZAP_TESTING'),
                            choice(
                                choices: ['Baseline', 'Full'],
                                description: 'Type of scan that is going to perform inside the container',
                                name: 'SCAN_TYPE'
                                
                            )
                            ])
                            ])
                            }
                            }
                            }
       stage('Testing stage') {
            steps {
            script {
               if (params.ZAP_TESTING == true) {
               echo params.SCAN_TYPE
               sh "docker build -t somu1996/nginx:v${BUILD_NUMBER} ."
               sh "docker images"
               def PORT= sh(  returnStdout: true, script: '''awk '/EXPOSE /{print $NF}' Dockerfile''' )
               env.PORT =  PORT
               sh 'echo ${PORT}'
               }
               }
               }

        }
    stage('Copy files to tmp folder') {
            steps {
                script {
               if ( "1" == "1" ) {
                   echo "Files Copied"
  
               }else {
                   echo "files added"

        }
        }
        }
        }
    }
}
