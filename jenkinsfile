pipeline {
    agent any
 
    stages {
        stage('Setup parameters') {
            steps {
                script { 
                    properties([
                        parameters([
                            booleanParam(
                                defaultValue: true, 
                                description: '', 
                                name: 'BOOLEAN',
                                script: [
                                            script: '''
                                                    if(params.BOOLEAN){
                                                        properties([
                              parameters([
                              choice(
                                choices: ['ONE', 'TWO'], 
                                name: 'PARAMETER_01'
                            )
                            }'''
                            ]
                            )])
                            ])
                            }
                            }
                            }
        stage('Git_checkout') {
            steps {
               
                git 'https://github.com/somu1679/terraformsomu.git'

            }

        }
    stage('Copy files to tmp folder') {
            steps {
                script {
               if ( "1" == "1" ) {
                   sh '''
                   rm -rf branch
                   echo "${GIT_BRANCH}" >> branch
                   gitbranch=$(cat branch | awk -F/ '{print $2}')
                   echo ${gitbranch}
                   '''
               dir("${WORKSPACE}/somu") {
                   
                   sh 'sudo cp main.tf ${WORKSPACE}'
               }
               }else {
                   echo "files added"

        }
               }
                }
            }
    }
}
