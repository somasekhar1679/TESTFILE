pipeline {
    agent any
 
    stages {
        stage('Parameters'){
                steps {
                    script {
                    properties([
                            parameters([
                               booleanParam(
                                defaultValue: true, 
                                description: 'Please tik the mark for further', 
                                name: 'BOOLEAN'
                            ))])}}}
        stage('Git_checkout') {
            steps {
               
                git 'https://github.com/somu1679/terraformsomu.git'

            }

        }
    stage('Copy files to tmp folder') {
            steps {
                script {
               if ( "1" == "1" ) {
                   sh '''
                   rm -rf branch
                   echo "${GIT_BRANCH}" >> branch
                   gitbranch=$(cat branch | awk -F/ '{print $2}')
                   echo ${gitbranch}
                   '''
               dir("${WORKSPACE}/somu") {
                   
                   sh 'sudo cp main.tf ${WORKSPACE}'
               }
               }else {
                   echo "files added"

        }
               }
                }
            }
    }
}
